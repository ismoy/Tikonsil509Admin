<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/card_bg_list_notification"
    android:elevation="60dp"
    android:layout_gravity="end"
    android:orientation="vertical"
    android:layout_marginBottom="56dp"
    tools:context=".ui.fragment.listnotification.ListNotificationFragment">

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/recyclerview_list_notification"
       android:layout_width="300dp"
       android:layout_height="match_parent"
       android:layout_marginTop="20dp"
       android:layout_marginBottom="20dp"
       tools:listitem="@layout/item_list_notification"/>

</LinearLayout>